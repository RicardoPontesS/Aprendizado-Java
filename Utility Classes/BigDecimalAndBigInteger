package videoaulas;

import java.math.BigDecimal;
import java.math.BigInteger;

public class BigDecimalAndBigInteger {

	public static void main(String[] args) {
		
		BigDecimal num1 = new BigDecimal("0.03");
		BigDecimal num2 = new BigDecimal("0.04");
		BigDecimal num3 = num1.subtract(num2);
		System.out.println(num3);
		
		BigInteger bi = new BigInteger("1000000");
		BigInteger bi2 = new BigInteger("2000000");
		System.out.println(bi.max(bi2));
	}

}
